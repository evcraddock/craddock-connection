---
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import Layout from '../../layouts/BaseLayout.astro';
import ArticlesList from '../../components/ArticlesList.astro';

export async function getStaticPaths({ paginate }) {
  const articles = (await getCollection('article'))
      .filter((a) => a.data.visible)
  const tags = [...new Set(articles.map((p) => p.data.tags).flat())];

  return tags.map((s) => {
    const tps = articles
      .filter((p) => p.data.tags.includes(s || ''))
      .sort((a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf())

      return paginate(tps, {
        params: { tag: s },
        pageSize: 6,
      });
  });
}

const { tag } = Astro.params;
const { page } = Astro.props;
---

<Layout 
  title={SITE_TITLE} 
  description={SITE_DESCRIPTION} 
>
  <h2 class="mb-0 mt-4 px-2 uppercase">
    {tag} 
  </h2>
  <ArticlesList posts={page.data} previous={page.url.prev} next={page.url.next} />
</Layout>

