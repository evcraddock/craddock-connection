---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import NavBar from '../components/NavBar.astro';
import ArticleNavBar from '../components/ArticleNavBar.astro';
import PhotoGallery from '../components/PhotoGallery.astro';
import Wiki from '../pages/wiki.astro';
import Footer from '../components/Footer.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

  <body>
    <NavBar />
    <ArticleNavBar />

		<main class="container mx-auto flex flex-wrap py-1">
      <section class="w-full md:w-3/4 flex flex-col px-3">
          <article class="max-w-screen-xl prose prose-headings:h-8 prose-p:text-lg ">
			  	  <slot />
			    </article>
      </section>
      
      <aside class="w-full md:w-1/4 flex flex-col items-center px-3">
        <Wiki />
        <PhotoGallery /> 
      </aside>
		<Footer />
		</main>
	</body>
</html>
